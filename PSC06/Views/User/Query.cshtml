@model List<PSC06.Models.TableViewModel.UserTableViewModel>
@{
    ViewBag.Title = "Consulta Usuarios";
    Layout = "~/Views/Shared/_LayoutAcceder.cshtml";
}

<h2>Consulta Usuario</h2>

<div class="row">
    <br />

    <div class="col-md-12">
        <input type="button"
               class="btn btn-primary btn-lg"
               onclick="document.location.href = '@Url.Content("~/User/Add")'"
               value="Nuevo" />

        <input type="button"
               class="btn btn-info btn-lg"
               onclick="document.location.href = '@Url.Content("~/Home/Index")'"
               value="Volver Atras" />
    </div>

    <br />
    <br />
    <br />
    <div class="col-lg-12">
        <table class="table table-striped">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Edad</th>
                <th scope="col">Accion a Tomar</th>
            </tr>

            @foreach (var oElemento in Model)
            {
                <tr>
                    <th scope="row">@oElemento._Id</th>
                    <td>@oElemento._Email</td>
                    <td>@oElemento._Edad</td>
                    <td>
                        <input type="button" 
                               value="Borrar" 
                               class="btn btn-danger" 
                               onclick="jsDelete(@oElemento._Id;")  />

                        <input type="button" 
                               value="Editar" 
                               class="btn btn-default" 
                               onclick="document.location.href = '@Url.Content("~/user/Edit/" + oElemento._Id)'" />
                    </td>
                </tr>
                
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(Id) {
        if (confirm("Realmente quieres borrar?")) {
            url = "@Url.Content("~/User/Delete")" + "/" + Id;

            $.post(url, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/")"
                } else {
                    alert("Ocurrio un error :(")
                }
            })
        }
    }
</script>